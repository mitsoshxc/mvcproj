@model mvcproj.Models.Users

@{
    ViewData["Title"] = "Home Page";
}

<div class="col-md-8 col-md-offset-2">
    <h1>Welcome This is our Index and Log In Page</h1>

    @{
        if ((bool)ViewData.ContainsKey("LogFail"))
        {
            <div class="alert alert-danger">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <strong>Log In Failed for user @ViewData["LogFail"]</strong>
            </div>
        }
        else if ((bool)ViewData.ContainsKey("SessionExpired"))
        {
            
            <div class="alert alert-danger">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <strong>Your Session is Expired</strong> Please Log In Again...
            </div>
            
        }
    }
    

    <form asp-action="Validate">
        <div class="form-group">
            <label for="name" class="control-label">User Name</label>
            <input type="text" name="_name" class="form-control" placeholder="User's Name" />
        </div>

        <div class="form-group">
            <label for="pass">Password</label>
            <input type="password" name="_pass" class="form-control" placeholder="Password" />
        </div>
        <button type="submit" class="btn btn-primary" id="SbmtLogIn">Submit</button>
    </form>
    
</div>