@model mvcproj.Models.Users
@{
    ViewData["Title"] = "Delete " + Model.name;
}

<div class="modal show" id="modal-id" style="margin-top:100px;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Really delete user @Model.name?</h4>
            </div>
            <div class="modal-body">
                
                <form asp-action="Delete" method="POST" role="form">                
                    <div class="form-group">
                        <input type="hidden"  name="_id" value="@Model.id">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a asp-action="Index">   
                        <button type="button" class="btn btn-primary">Cancel</button>    
                    </a>
                </form>
                
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>